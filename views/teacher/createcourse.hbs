	<div class="modal-content">
			<form id = "addCourseForm"  method="POST" action="/teacher/addCourse" enctype="multipart/form-data">
				<div class="modal-header">						
					<h4 class="modal-title">THÊM KHÓA HỌC</h4>
					
				</div>
				<div class="modal-body">					
					<div class="form-group">
						<label>Tên khóa học: </label>
						<input name="tenkhoahoc" type="text" class="form-control" require  maxlength="100">
					</div>
          <div class="form-group">
            <label>Thể loại: </label>
						<select name = "_idTheLoai" class="form-select" >
              {{#each theloai }}
                <option value="{{_id}}">{{TenTheLoai}}</option>
              {{/each}}
            </select>
					</div>
					<div class="form-group">
						<label>Học phí: </label>
						<input name="hocphi" type="number" class="form-control" require min="0">
					</div>
					<div class="form-group">
						<label>Khuyến mãi </label>
						<input  name="khuyenmai"  type="number" class="form-control" max="100" min="0">
					</div>
          <div class="form-group">
						<label>Mô tả ngắn </label>
						<input  name="motangan"  type="text" class="form-control"  maxlength="100" >
					</div>
          <div class="form-group">
            <label>Mô tả chi tiết </label>
            <textarea name = "motachitiet" id="mytextarea"></textarea>
          </div>
					<div class="form-group">
						<label for="hinhanh">Chọn một bức hình:</label>
						<input id="fuMain" name="file" type="file" class="file" required>
					</div>
				</div>
				<div class="modal-footer">
					<input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel">
					<input id="saveButton" type="submit" class="btn btn-info" value="Save">
				</div>
			</form>
		</div>

	<script src="https://cdn.tiny.cloud/1/vw6cg862gs7gx0ippt9ttr48wtzd5q49nr2rhy7ovs9ileuy/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>


		<script>
      tinymce.init({
        selector: '#mytextarea'
      });

    </script>
