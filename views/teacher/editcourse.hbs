    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-fileinput/5.1.3/css/fileinput.min.css">
    

	<div class="modal-content">
			<form id = "editCourse"  method="POST" action="/teacher/detailcourse/{{khoahoc._id}}/editCourse" >
				<div class="modal-header">						
					<h4 class="modal-title">THÔNG TIN KHÓA HỌC</h4>
				</div>
				<div class="modal-body">	
          {{#if khoahoc}}
            <div class="form-group">
              <input class="form-control " type="text"   style="display:none" name="_id" value="{{khoahoc._id}}" require>
              <label class = "form-title">Tên khóa học: </label>
              <input name="ten" type="text" class="form-control" require  maxlength="100" value="{{khoahoc.TenKhoaHoc}}">
            </div>
            <div class="form-group">
              <label class = "form-title">Thể loại: <h4 style="color: rgb(207, 74, 74);">{{khoahoc.TheLoai2.TenTheLoai}}</h4> </label>
            </div>
            <div class="form-group">
              <label class = "form-title">Học phí: </label>
              <input name="hocphi" type="number" class="form-control" require min="0" value="{{khoahoc.HocPhiGoc}}">
            </div>
            <div class="form-group">
              <label class = "form-title">Khuyến mãi </label>
              <input  name="khuyenmai"  type="number" class="form-control" max="100" min="0" value="{{khoahoc.KhuyenMai}}">
            </div>
            <div class="form-group">
              <label class = "form-title">Mô tả ngắn </label>
              <input  name="motangan"  type="text" class="form-control"  maxlength="100" value="{{khoahoc.MoTaNgan}}" >
            </div>
            <div class="form-group">
              <label class = "form-title">Mô tả chi tiết </label>
              <textarea name = "motachitiet" id="mytextarea" >{{khoahoc.MoTaChiTiet}}</textarea>
            </div>
            <div class="form-group">
              <div class = "form-title">Lượt xem:<p> {{khoahoc.LuotXem}} </p></div>
              <div class = "form-title">Điểm đánh giá: <p>{{khoahoc.DiemDanhGia}} </p></div>
              <div class = "form-title">Ngày đăng: <p>{{khoahoc.NgayDang}}</p> </div>
              <div class = "form-title">Cập nhật lần cuối: <p>{{khoahoc.CapNhatCuoi}} </p></div>
            </div>
          {{else}}
            <h1>No data found!</h1>
          {{/if}}				
					
				</div>
				<div class="modal-footer">
					{{!-- <input type="button" class="btn btn-default" data-dismiss="modal" value="Cancel"> --}}
					<input id="saveButton" type="submit" class="btn btn-info" value="Save">
				</div>
			</form>
		</div>

	<script src="https://cdn.tiny.cloud/1/vw6cg862gs7gx0ippt9ttr48wtzd5q49nr2rhy7ovs9ileuy/tinymce/5/tinymce.min.js" referrerpolicy="origin"></script>


		<script>
      tinymce.init({
        selector: '#mytextarea'
      });

    </script>
